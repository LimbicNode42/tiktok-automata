# Environment Configuration for TLDR Newsletter Scraper

# Newsletter URLs
TLDR_NEWSLETTER_URL=https://tldr.tech/
TLDR_RSS_FEED=https://tldr.tech/rss

# Scraping Settings
MAX_AGE_HOURS=24  # Only fetch articles from last N hours
MAX_ARTICLES_PER_RUN=10  # Maximum articles to process per run
REQUEST_TIMEOUT=30  # HTTP request timeout in seconds
RETRY_ATTEMPTS=3  # Number of retry attempts for failed requests

# User Agent for web requests
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Paths
OUTPUT_DIR=./data  # Where to save scraped data
LOGS_DIR=./logs    # Where to save log files

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/scraper.log
OUTPUT_PATH=./output
TEMP_PATH=./temp

# Automation
SCHEDULE_TIME=08:00  # Time to check for new newsletters (24h format)
TIMEZONE=UTC

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/automata.log

# Processing
MAX_CONCURRENT_VIDEOS=2
RETRY_ATTEMPTS=3
